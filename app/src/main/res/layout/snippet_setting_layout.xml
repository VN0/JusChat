<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_photo_section"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                app:civ_border_color="@color/white"
                android:src="@drawable/dp1"
                app:civ_border_width="0.5dp"/>

            <ImageView
                android:id="@+id/search"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_edit_grey"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameSection"
            android:padding="10dp"
            android:background="@drawable/grey_bottom_line"
            >
            <ImageView
                android:id="@+id/blankProfile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_account_circle_black_24dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameNStatus"
                android:layout_toRightOf="@+id/blankProfile"
                >
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="20sp"
                    android:textColor="@color/cute_grey"
                    />
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="theEagle"
                    android:textSize="25sp"
                    android:textColor="@color/dark_grey"
                    android:layout_below="@+id/name"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_setting_text"
                    android:textSize="18sp"
                    android:textColor="@color/cute_grey"
                    android:layout_below="@+id/userName"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <ImageView
                android:id="@+id/editNameButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_edit_grey"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aboutSection"
            android:padding="10dp"
            android:background="@drawable/grey_bottom_line"
            >
            <ImageView
                android:id="@+id/iButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_account_circle_black_24dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/aboutStatus"
                android:layout_toRightOf="@+id/iButton"
                >
                <TextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textSize="20sp"
                    android:textColor="@color/cute_grey"
                    />
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hard work pays off."
                    android:textSize="25sp"
                    android:textColor="@color/dark_grey"
                    android:layout_below="@+id/about"
                    android:textStyle="bold"
                    />


            </RelativeLayout>

            <ImageView
                android:id="@+id/editAboutButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_edit_grey"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phoneSection"
            android:padding="10dp"
            android:background="@drawable/grey_bottom_line"
            >
            <ImageView
                android:id="@+id/phoneButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_call_black_24dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:layout_toRightOf="@+id/phoneButton"
                >
                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="20sp"
                    android:textColor="@color/cute_grey"
                    />
                <TextView
                    android:id="@+id/phoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 8209278477"
                    android:textSize="25sp"
                    android:textColor="@color/dark_grey"
                    android:layout_below="@+id/phoneText"
                    android:textStyle="bold"
                    />


            </RelativeLayout>

            <ImageView
                android:id="@+id/editPhoneButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_edit_grey"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>







    </LinearLayout>



</merge>