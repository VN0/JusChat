<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/grey_border_bottom"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/whatsapp_green">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/arrow_back"
                    android:layout_width="@dimen/layout_padding_30dp"
                    android:layout_height="@dimen/layout_padding_30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_arrow_back_white_24dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/layout_padding_30dp"
                    android:layout_height="@dimen/layout_padding_30dp"
                    android:background="@drawable/sharad"
                    android:layout_toRightOf="@+id/arrow_back"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/arrow_back"
                    android:layout_centerVertical="true"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginStart="10dp"
                    tools:ignore="RtlHardcoded" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/profile_image"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sharad"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/timeStamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="last seen 8:05AM"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_below="@+id/profileName"
                        />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/call_support"
                    android:layout_width="@dimen/layout_padding_30dp"
                    android:layout_height="@dimen/layout_padding_30dp"
                    android:background="@drawable/ic_phone_white_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
</merge>